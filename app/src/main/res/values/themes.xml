<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Paleta solicitada: principal blanco, secundario dorado, texto negro -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/dorado_secundario</item>
        <item name="colorSecondaryVariant">@color/dorado_secundario</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Superficies y fondos -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Status / Navigation bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        
        <!-- Desactivar completamente adaptación nocturna -->
        <!-- Quitar referencias a atributos inexistentes colorBackground -->
        <!-- Forzar colores de texto explícitos -->
        <item name="android:textColorPrimary">@color/black_300</item>
        <item name="android:textColorSecondary">@color/black_400</item>
        <item name="android:textColorHint">@color/black_450</item>
        <item name="android:colorForeground">@color/black</item>
        <item name="android:colorButtonNormal">@color/dorado_secundario</item>
    </style>

