        <activity
            android:name=".ui.comun.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.comun.MainActivity" />
        <activity android:name=".ui.cliente.RegisterActivity" />
        <activity android:name=".ui.empleado.CreateProductActivity" />
        <activity android:name=".ui.empleado.EditProductActivity" />
        <activity android:name=".ui.cliente.ProductDetailActivity" />
        <activity android:name=".ui.cliente.OrderSummaryActivity" />
        <activity android:name=".ui.cliente.PurchaseHistoryActivity" />
        <activity android:name=".ui.comun.EditProfileActivity" />
        <activity android:name=".ui.empleado.ManageProductImagesActivity" />
    </application>

</manifest>